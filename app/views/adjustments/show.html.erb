
<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Inventory - Adjustments" %>
  <h1>
    Adjustment
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><%= link_to "All Adjustments", (adjustments_path) %></li>  
    <li class="active">Adjustment (<%= @adjustment.created_at.strftime("%m/%d/%Y") %>)</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Adjustment (<%= @adjustment.created_at.strftime("%m/%d/%Y") %>)</h3>
  </div>
  <div class="box-body">

<p>
  <strong>Organization:</strong>
  <%= @adjustment.organization.name %>
</p>

<p>
  <strong>Storage location:</strong>
  <%= @adjustment.storage_location.name %>
</p>
        <!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
    </tr>
  <% @adjustment.line_items.each do |line_item| %>
    <tr>
      <td><%= line_item.item.name %></td>
      <td><%= line_item.quantity %></td>
    </tr>
  <% end %>
    </table>
  <!-- /.box-body -->
  <p>

  </div>
      <!-- /.box -->
  <strong>Comments:</strong>
  <%= @adjustment.comment %>
</p>    
  </div>
</div>





