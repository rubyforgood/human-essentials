<% case status %>
<% when "pending" %>
    <span class="badge badge-warning">Pending</span>
<% when "started" %>
    <span class="badge badge-primary">Started</span>
<% when "fulfilled" %>
    <span class="badge badge-success">Fulfilled</span>
<% else %>
    <span class="badge badge-danger">Errored</span>
<% end %>