<section class="content-header">
	<% content_for :title, "Organizations - #{@organization.name}" %>
<h1>
  Organization info
  <small>for <%= @organization.name %></small>
</h1>
<ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
    <i class="fa fa-dashboard"></i> Home
  <% end %>
  </li>
  <li><%= link_to "Administration", (admins_path) %></li>  
  <li class="active"><%= @organization.name %></li>
</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @organization.name %></h3>
  </div>
  <div class="box-body">

	<p><%= link_to @organization.email, "mailto:#{@organization.email}" %></p>
	<p><%= @organization.address %></p>
	Users:
	<%= @organization.display_users %>
		<br>
	<a href="#addUserModal" class="btn btn-xs btn-info" data-toggle="modal">Invite User to this Organization</a>

	<div id="addUserModal" class="modal fade">

  <div class="modal-dialog">
	
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Add User to <%= @organization.name %></h4>
				</div>
				<div class="modal-body">
				<div class="box-body">
				<%= form_tag invite_user_admins_path do %>
					Name:<%= text_field_tag :name %><br>
					Email:<%= text_field_tag :email %>
					<%= hidden_field_tag :org , @organization.id %><br>
					 <%= submit_tag "Submit" %>
				<% end %>				</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
	
		</div>
	</div>

	</div>
</div>



