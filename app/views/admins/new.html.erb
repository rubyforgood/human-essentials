<% content_for :title, "Organizations - New" %>



<h1 class="medium-offset-3 medium-6">Add a new Organization</h1>

<%= simple_form_for @organization, url: admins_path do |f| %>
  <div class="form-actions medium-offset-3 medium-6">  
    <%= f.error_notification %>
  </div>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :short_name, required: true, autofocus: true %>
    <%= f.input :url, as: :url, placeholder: "http://www.example.com" %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :logo %>
    <p class="help-text medium-offset-3 medium-6">Logo should be a 4:1 ratio of width / height (default image is 763 x 188 pixels)</p>
  </div>

  <div class="form-actions medium-offset-3 medium-6">
    <%= f.button :submit, "Create" %>
  </div>
<% end %>
