<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Distributions" %>
  <h1>
    Distributions
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><a href="#">Distributions</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <!--
    <div class="box-header with-border bg-aqua">
      <div class="row">
        <div class="col-xs-12">

          <section id="filters" class="box-header with-border bg-aqua">
            <!-- we need to add filters to this, they'll go here
          </section>
        </div>
      </div>
    </div>
  -->
    <div class="box-body">
      <%= link_to new_distribution_path(organization_id: current_organization), class: "btn btn-success btn-lg pull-left" do %>
        <i class="fa fa-plus"></i> New Distribution
      <% end %>
      <div class="row">
        <div class="col-xs-12">
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
              <thead>
                <tr>
                  <th>Partner</th>
                  <th>Source Inventory</th>
                  <th>Total items</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "distribution_row", collection: @distributions %>
              </tbody>
              </table>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
    </div>
  </div>
</section>
