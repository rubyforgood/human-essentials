<section class="content-header">
  <% content_for :title, "Distributions - #{current_organization.name}" %>
  <h1>
    Distributions
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><a href="#">Distributions</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-header with-border bg-gray">
      <section id="filters">
        <!-- TBA -- style after other #index views -->
      </section><!-- /#filters -->
      <div class="btn-group pull-right">
        <%= link_to new_distribution_path(organization_id: current_organization), class: "btn btn-success" do %>
          <i class="fa fa-plus"></i> New Distribution
        <% end %>
        <% if @distributions.length > 0 %>
          <%= link_to csv_path(format: :csv, type: "Distribution"), class: "btn btn-secondary" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Export Distributions
          <% end %>
        <% end %>
      </div>
    </div><!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <div class="col-xs-12">
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Partner</th>
                  <th>Date of Distribution</th>
                  <th>Source Inventory</th>
                  <th>Total items</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "distribution_row", collection: @distributions %>
              </tbody>
            </table>
          </div><!-- /.box-body.table-responsive -->
        </div><!-- /.col-xs-12 -->
      </div><!-- /.row -->
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section><!-- /.content -->
