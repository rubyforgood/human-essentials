<div class="card d-flex flex-column" id="distributions">
  <div class="card-header border-0 bg-primary">
    <h3 class="card-title text-semibold">Distributions</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <i class="fas fa-minus"></i>
      </button>
    </div>
  </div>
  <div class="card-body p-0 ">
    <div class="d-flex justify-content-between align-items-center mb-3 px-3 pt-3 flex-sm-wrap">
      <div>
        <h2 class="m-0"><strong><%= total_distributed %></strong></h2>
        <span class="text-muted">Items Distributed</span>
      </div>
      <span class="text-muted px-3 text-right ">(<%= future_distributed %> items scheduled for future distribution)</span>
    </div>         
    <div class="border-bottom mt-3">
      <small class="d-flex justify-content-between  text-muted px-3 mb-1">
      <span>Recent Distributions</span>
      <%= link_to "View All Distributions", distributions_path %>
      </small>
    </div>
    <div class="d-flex justify-content-between mx-3 my-2 text-muted ">
      <div class="w-50">
        <small>Quantity</small>
      </div>
      <div class="w-100 text-left">
        <small>Distributed To</small>
      </div>
      <div class="w-50 text-right">
        <small>Time Ago</small>
      </div>
    </div>
      <%= render partial: "distribution", collection: @recent_distributions, as: :distribution %>
    </div>

    <div class="card-footer text-center">
      <%= new_button_to new_distribution_path, {text: "Add New Purchase", size: "sm"} %>
    </div>
</div>
