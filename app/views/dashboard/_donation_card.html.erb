<div class="card d-flex flex-column" id="donations">
  <div class="card-header border-0 bg-primary">
    <h3 class="card-title text-semibold">Donations - All Sources</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <%= fa_icon 'minus' %>
      </button>
    </div>
  </div>
  <div class="card-body p-0 ">
    <div class="d-flex justify-content-between pt-3">
      <div class="px-3 mb-3">
        <h2 class="m-0"><b><%= total_received_donations %></b></h2>
        <span>Items Received</span>
      </div>
      <div class="px-3 mb-3 text-right">
        <h2 class="m-0"><b><%= dollar_value(total_received_money_donations) %></b></h2>
        <span>Funds Raised</span>
      </div>
    </div>
    <div class="border-bottom">
      <small class="d-flex justify-content-between px-3 mb-1">
        <span>Recent Donations</span>
        <%= link_to "View All Donations", donations_path %>
      </small>
    </div>
    <div class="d-flex justify-content-between mx-3 my-2">
      <div class="w-50">
        <small>Quantity</small>
      </div>
      <div class="w-100 text-left">
        <small>Donated From</small>
      </div>
      <div class="w-50 text-right">
        <small>Time Ago</small>
      </div>
    </div>
    <%= render partial: "donation", collection: @recent_donations, as: :donation %>
  </div>
  <div class="card-footer text-center">
    <%= new_button_to new_donation_path, {text: "Add New Donation", size: "sm"} %>
  </div>
</div>
