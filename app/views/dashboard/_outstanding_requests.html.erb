<table class="table table-hover striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Partner</th>
      <th>Requestor</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <% outstanding_requests.each do |item| %>
      <tr>
        <td class="date"><%= link_to item.created_at.strftime("%m/%d/%Y"), item %></td>
        <td><%= item.partner.name %></td>
        <td><%= item.partner_user&.formatted_email %></td>
        <td><%= item.comments %></td>
      </tr>
    <% end %>
  </tbody>
</table>
