<div class="content-header bg-white mb-4 border-bottom sticky-top shadow-sm">
  <div class="container-fluid">
    <div class="w-100">
      <div class="content" id="summary">
        
        <div class="row">
          <%= render partial: "getting_started_prompt", locals: {org_stats: @org_stats} %>
        </div>
    
        <div class="d-flex justify-content-between flex-wrap align-items-center">
          <div class=" d-flex flex-grow-1 ">
            <%= simple_form_for :filters, url: dashboard_path(current_organization), method: :get do |f| %>
              <div class="d-flex flex-grow-1"  style="width:110%;">
                <%= render partial: "shared/date_range_picker", locals: {css_class: "form-control"} %>
                <button class="btn btn-secondary ml-2" >Filter</button>
              </div>
            <% end %>
          </div>
          <h4 class="text-muted"><%= @selected_date_range %></h4>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="content ">
  <div class="container-fluid">
    <div class="d-flex flex-column mb-3 card ">

        <div class="d-flex align-items-center justify-content-between border-bottom p-4 flex-wrap-reverse">
          
          <div class="d-flex flex-column align-items-start ">
            <span class="text-muted">Items on-hand</span>
            <h1><b><%= total_on_hand(@total_inventory) %></b></h1>
          </div>

          <div class="d-flex ">
            <div class="mr-4">
              <%= new_button_to new_transfer_path, {text: "Make a Transfer", size: "md"} %>
            </div>
            <div>
              <%= new_button_to new_adjustment_path, {text: "Make an Adjustment", size: "md"} %>
            </div>
          </div>

        </div>

        <div class="p-4">
        <h5><b>Activity</b></h5>
        <%= bar_chart received_distributed_data %>
        </div>

    </div>
  </div>
</div>
