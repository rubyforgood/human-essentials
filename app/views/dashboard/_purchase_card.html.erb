<div class="card d-flex flex-column" id="purchases">
  <div class="card-header border-0 bg-primary">
    <h3 class="card-title text-semibold">Purchases</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <i class="fas fa-minus"></i>
      </button>
    </div>
  </div>
  <div class="card-body p-0 ">
    <div class="d-flex justify-content-between pt-3">
      <div class="px-3 mb-3">
        <h2 class="m-0"><b><%= dollar_value(@purchases.sum(&:amount_spent_in_cents)) %></b></h2>
        <span class="text-muted">Spent</span>
      </div>
    </div>
    <div class="border-bottom">
      <small class="d-flex justify-content-between text-muted px-3 mb-1">
        <span>Recent Purchases</span>
        <%= link_to "View All Purchases", purchases_path%>
      </small>
    </div>
    <div class="d-flex justify-content-between mx-3 my-2 text-muted ">
      <div class="w-50">
        <small>Quantity</small>
      </div>
      <div class="w-100 text-left">
        <small>Purchased From</small>
      </div>
    </div>
    <%= render partial: "purchase", collection: @recent_purchases, as: :purchase %>
  </div>
  <div class="card-footer text-center">
    <%= new_button_to new_purchase_path, {text: "Add New Purchase", size: "sm"} %>
  </div>
</div>
