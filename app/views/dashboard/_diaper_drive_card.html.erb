<div class="card d-flex flex-column" id="diaper_drives">
  <div class="card-header border-0 bg-primary">
    <h3 class="card-title text-semibold">Diaper Drives</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse">
        <i class="fas fa-minus"></i>
      </button>
    </div>
  </div>
  <div class="card-body p-0 ">
    <div class="d-flex justify-content-between pt-3">
      <div class="px-3 mb-3">
        <h2 class="m-0"><b><%= total_received_from_diaper_drives %></b></h2>
        <span class="text-muted">Items Received</span>
      </div>
      <div class="px-3 mb-3 text-right">
        <h2 class="m-0"><b><%= dollar_value(total_received_money_donations) %></b></h2>
        <span class="text-muted">Funds Raised</span>
      </div>
    </div>
    <div class="border-bottom">
      <small class="d-flex justify-content-between text-muted px-3 mb-1">
        <span>Recent donations</span>
        <%= link_to "View All Diaper Drive Donations", donations_path(
                filters: {
                    by_source: "Diaper Drive"
                }) %>
      </small>
    </div>
    <div class="d-flex justify-content-between mx-3 my-2 text-muted ">
      <div class="w-50">
        <small>Quantity</small>
      </div>
      <div class="w-100 text-left">
        <small>Donated From</small>
      </div>
    </div>
    <%= render partial: "diaper_drive", collection: @recent_donations.by_source(:diaper_drive), as: :donation %>
  </div>
</div>
