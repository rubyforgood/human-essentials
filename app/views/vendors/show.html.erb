<section class="content-header">
  <% content_for :title, "Vendors - #{@vendor.contact_name} - #{current_organization.name}" %>
  <h1>
    Vendor Information
    <small>for <%= @vendor.contact_name %></small>
  </h1>
  <ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><%= link_to "Vendors", (vendors_path) %></li>
    <li class="active"> <%= @vendor.contact_name %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @vendor.contact_name %></h3>
  </div>
  <div class="box-body">

    <p>Business name: <%= @vendor.business_name %></p>
    <p>Contact Name: <%= @vendor.contact_name %></p>

  <% if @vendor.phone.present? %>
    <p>Phone: <%= @vendor.phone %></p>
  <% end %>
  <% if @vendor.email.present? %>
    <p>Email: <%= link_to @vendor.email, "mailto:#{@vendor.email}" %></p>
  <% end %>
    <p>Address: <%= @vendor.address %></p>
  <% if @vendor.present? %>

  <h4>Past Purchases with this Vendor</h4>
  <div class="row">
  <div class="col-xs-12">
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <tr>
          <th>Date</th>
          <th>Volume</th>
          <th>Details</th>
        </tr>

        <% @vendor.purchases.each do |purchase| %>
            <tr>
              <td><%= purchase.created_at.strftime("%m/%d/%Y") %></td>
              <td><%= purchase.line_items.total %></td>
              <td><%= view_button_to purchase, { text: "View purchase details" } %></td>
          </tr>
          <% end %>
        </table>
      <!-- /.box-body -->

      </div>
    <!-- /.box -->
    </div>
  </div>
  <% end %>
  </div>
</div>
</section>
