<section class="content-header">
  <% content_for :title, "Admin - Feedback Messages" %>
  <h1>
    Feedback Messages - Global
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(admin_dashboard_path) do %>
        <i class="fa fa-lock"></i> Admin
      <% end %>
    </li>
    <li><a href="#">Feedback Messages</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-body">
      <div class="row">
        <div class="col-xs-12">
          <div class="box-body table-responsive no-padding">
            <table id="tbl_barcode_items" class="table table-hover striped">
              <thead>
              <tr>
                <th>Message</th>
                <th>User</th>
                <th>Path</th>
                <th>Resolved</th>
                <th>&nbsp;</th>
              </tr>
              </thead>
              <tbody>
              <% @feedback_messages.each do |feedback| %>
                <tr>
                  <td><%= feedback.message %></td>
                  <td><%= feedback.user.email %></td>
                  <td><%= feedback.path %></td>
                  <td><%= check_box_tag 'Resolved', feedback.resolved, feedback.resolved, data: {url: admin_feedback_message_resolve_path(feedback), remote: true, method: :get} %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div><!-- /.box-body -->
        </div><!-- /.col-xs-12 -->
      </div><!-- /.row -->
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section>
