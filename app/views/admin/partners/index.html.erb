<section class="content-header">
  <% content_for :title, "Users" %>
  <h1>
    Partners
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to(admin_dashboard_path) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li><a href="#">All partners</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <div class="box-body">
      <div class="row">
        <div class="col-xs-12">
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover striped">
              <thead>
              <tr>
                <th>Name</th>
                <th>Organization</th>
                <th class="pull-right">Actions</th>
              </tr>
              </thead>
              <tbody>
              <% @partners.each do |partner| %>
                <tr>
                <td><%= partner.name %></td>
                <td><%= partner.organization&.name %></td>
                <td class="text-right">
                  <%= view_button_to admin_partner_path(partner) %>
                  <%= edit_button_to edit_admin_partner_path(partner) %>
                </td>
              <% end %>
              </td>
              </tr>
              </tbody>
            </table>
            <!-- /.box-body -->
          </div>
        </div>
        <!-- /.box -->
      </div>
    </div>
  </div>
</section>
