<section class="content-header">
  <% content_for :title, "Base Items" %>
  <h1>
    Base Items
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(admin_dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><a href="#">All Base Items</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-body">
    <div class="row">
      <div class="col-xs-12">
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Child Items</th>
                <th class="pull-right">Actions</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "base_item_row", collection: @base_items %>
            </tbody>
          </table>
        </div><!-- /.col-xs-12 -->
      </div><!-- /.row -->
    </div><!-- /.box-body -->
  </div><!-- /.box -->
  </div>
</section><!-- /.content -->
