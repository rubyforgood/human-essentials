<section class="content-header">
  <% content_for :title, "Edit - Items - #{@base_item.name} - Inventory" %>
<h1>
  Editing Base Item
</h1>
<ol class="breadcrumb">
  <li>
    <%= link_to(admin_dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
  </li>
  <li><%= link_to "All Base Items", (admin_base_items_path) %></li>
  <li class="active">Editing <%= @base_item.name %></li>
</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Update <%= @base_item.name %></h3>
  </div>
  <div class="box-body">
    <div class="box-body">
      <%= simple_form_for [:admin, @base_item], html: { class: 'form-horizontal' },  url: admin_base_item_path(@base_item) do |f| %>
        <%= render partial: "form", object: f %>
        <%= submit_button %>
      <% end %>
    </div>
  </div>
</div>
<!-- /.box -->

</section>


