<table class="table">
  <thead>
    <tr>
      <th>Roles</th>
      <th>Name</th>
      <th>Email</th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.roles.map { |role| "#{role.name} (#{role.resource&.name.presence || "N/A"})" }.compact.uniq.sort.join(", ") %>
        </td>
        <td><%= user.display_name %></td>
        <td><%= user.email %></td>
        <td class="text-right">
          <% if user.invitation_sent_at.present? %>
            <%= invite_button_to(admin_user_resend_invitation_path(user), confirm: "Re-send an invitation to #{user.preferred_name}?", text: 'Re-send Invite') %>
          <% end %>
          <%= edit_button_to edit_admin_user_path(user), class: 'ml-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
