<%= simple_form_for form, html: { role: "form" } do |f| %>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- jquery validation -->
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h5 class="card-title">Barcode for <%= @barcode_item.quantity %> of <%= @barcode_item.item.name %>
              </h5>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form role="form" id="quickForm">
              <div class="card-body">
                <%= f.input :quantity, label: "Quantity", wrapper: :vertical_input_group do %>
                  <span class="input-group-text"><i class="fa fa-sort-numeric-desc"></i></span>
                  <%= f.input_field :quantity, class: "form-control" %>
                <% end %>
                <%= f.association :barcodeable, collection: @items, label: "Item", wrapper: :vertical_input_group %>
                <%= f.input :value, label: "Barcode", wrapper: :vertical_input_group do %>
                  <span class="input-group-text"><i class="fa fa-barcode"></i></span>
                  <%= f.input_field :value, class: "form-control" %>
                <% end %>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <%= submit_button %>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>

      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
<% end %>