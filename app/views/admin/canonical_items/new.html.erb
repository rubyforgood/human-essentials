<section class="content-header">
  <% content_for :title, "Canonical Items - New" %>
  <h1>
    New Canonical Item
  </h1>
  <ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><%= link_to "All Canonical Items", (admin_canonical_items_path) %></li>
    <li class="active"> New Canonical Item</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">New Canonical Item</h3>
    </div>
    <div class="box-body">
      <div class="box-body">
        <%= simple_form_for [:admin, @canonical_item], html: { class: 'form-horizontal' } do |f| %>
          <%= render partial: "form", object: f %>
          <%= f.button :submit, "Create Canonical Item", class:"btn btn-info"%>
        <% end %>
      </div>
    </div>
  </div>
  <!-- /.box -->

</section>


