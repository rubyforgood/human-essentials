<%= turbo_frame_tag "partners/#{partner.id}/users" do %>
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Users</h3>
    </div>

    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Invitation Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.order(name: :asc).each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.invitation_accepted_at %>
                  <span class="badge bg-success">Accepted</span>
                <% else %>
                  <div class='d-flex flex-column justify-content-center align-items-start'>
                    <span class="badge bg-warning">
                      <div>Waiting Acceptance</div>
                    </span>
                    <div>Last invite sent <strong><%= time_ago_in_words(user.invitation_sent_at) %> ago</strong></div>
                  </div>
                <% end %>
              </td>
              <td class='d-flex'>
                <% unless user.invitation_accepted_at %>
                  <%= button_to "Resend Invite", '#', method: :post, class: "btn btn-primary btn-sm mr-2" %>
                <% end %>
                <%= button_to "Remove Access", partner_user_path(partner, user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
