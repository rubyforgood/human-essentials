<%= simple_form_for @item_category, remote: request.xhr?, html: {class: 'form-horizontal'} do |f| %>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- jquery validation -->
          <div class="card card-primary">
            <!-- /.card-header -->
            <!-- form start -->
            <div class="card-body">
              <div class='w-1/4'>
                <%= f.input :name, label: "Category Name" do %>
                  <%= f.input_field :name, class: "form-control" %>
                <% end %>
              </div>

              <div class='w-1/2'>
                <%= f.input :description, label: "Category Description", hint: 'Cannot be more than 250 characters' %>
              </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
              <%= submit_button %>
            </div>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
<% end %>

