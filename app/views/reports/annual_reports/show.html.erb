<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <% content_for :title, "Audits - Inventory - #{current_organization.name}" %>
        <h1>
          <%= "#{params[:year]} NDBN Annual Report" %>
          <small>for <%= current_organization.name %></small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to(dashboard_path) do %>
              <i class="fa fa-dashboard"></i> Home
            <% end %>
          </li>
          <li class="breadcrumb-item"><%= link_to "All Reports", reports_annual_reports_path %></li>
          <li class="breadcrumb-item"><a href="#">Reports - <%= params[:year] %></a></li>
        </ol>
      </div>
    </div>
  </div>
</section>
<!-- Main content -->
<section class="content">
  <div class="card-footer">
    <div class="card-body">
      <span class="float-right">
        <%=
          refresh_button_to(
            recalculate_reports_annual_report_path(@year),
              { text: "Recalculate Report" },
              method: :post
            )
        %>
        <%=
            download_button_to(
              reports_annual_report_path(@year, format: :csv),
              text: "Export Report"
            )
        %>
      </span>
    </div>
  </div>
</section>
<% @report.each_report do |name, entries| %>
  <section class="content">
    <h1 class='text-3xl text-center'><%= name %></h1><br>
    <div class="card">
      <div class="card-body p-0">
        <table class="table">
          <tbody>
          <% entries.each do |name, value| %>
            <tr>
              <th><%= name %></th>
              <td><%= value %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
  <br>
<% end %>
