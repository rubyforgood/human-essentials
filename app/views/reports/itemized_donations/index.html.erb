<%= render(
  "shared/card",
  gradient: "warning",
  title: "Itemized Donations",
  subtitle: @selected_date_range,
  type: :table,
) do %>

  <table class="table table-hover striped">
    <thead>
    <tr>
      <th>&nbsp;&nbsp;&nbsp;Item</th>
      <th>Total Donated</th>
      <th>Total On Hand</th>
    </tr>
    </thead>
    <% # Ordering from highest distributed to lowest %>
    <% @itemized_donation_data.each do |item| %>
      <tbody>
        <tr>
          <td>&nbsp;&nbsp;&nbsp;<%= item[:name] %></td>
          <td><%= item[:donated] %></td>
          <td><%= item[:current_onhand] || "Unknown" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
