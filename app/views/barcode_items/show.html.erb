<section class="content-header">
	<% content_for :title, "Barcode Items - #{@barcode_item.item.name} - Inventory - #{current_organization.name}" %>
  <h1>
    Barcode Information
    <small>for <%=  @barcode_item.item.name %></small>
  </h1>
	<ol class="breadcrumb">
	<li><%= link_to(dashboard_path) do %>
	    <i class="fa fa-dashboard"></i> Home
	  <% end %>
	  </li>
	  <li><%= link_to "All Barcodes", (barcode_items_path) %></li>  
	  <li class="active">Viewing Barcode</li>
	</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @barcode_item.item.name %></h3>
  </div>
  <div class="box-body">

	<dl>
	    <dt>Quantity</dt>
		<dd><%= @barcode_item.quantity %></dd>

		<dt>Barcode</dt>
		<dd><%= @barcode_item.value %></dd>
	</dl>

  </div>
</div>





