<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Data Export" %>
  <h1>
    Data Export
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to(dashboard_path) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li class="active">Donation Sites</li>
  </ol>
</section>

<section class="content">
  <div class="box">
    <div class="box-header with-border bg-gray">
      Export Options
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-md-3 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: 'donations'), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Export My Donations
          <% end %>
        </div>

        <div class="col-md-3 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: 'purchases'), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Export My Purchases
          <% end %>
        </div>

        <div class="col-md-3 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: 'donation_sites'), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Export My Donation Sites
          <% end %>
        </div>

        <div class="col-md-3 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: 'partner_agencies'), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Export My Partner Agencies
          <% end %>
        </div>
      </div>

      <div class="row">

      </div>
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section><!-- /.content -->
