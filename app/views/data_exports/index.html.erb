<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Data Export" %>
  <h1>
    Data Export
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to(dashboard_path) do %>
        <i class="fa fa-dashboard"></i> Home
      <% end %>
    </li>
    <li class="active">Donation Sites</li>
  </ol>
</section>

<section class="content">
  <div class="box">
    <div class="box-header with-border bg-gray">
      Export Options
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Donation"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Donations
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Purchase"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Purchases
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Distribution"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Distributions
          <% end %>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "DonationSite"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Donation Sites
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Partner"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Partner Agencies
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "DiaperDriveParticipant"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Diaper Drive Participants
          <% end %>
        </div>
      </div>

      <hr/>
      
      <div class="row">
        <div class="col-md-offset-2 col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Item"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Items
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "BarcodeItem"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Barcode Items
          <% end %>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "StorageLocation"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Storage Locations
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Adjustment"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Inventory Adjustments
          <% end %>
        </div>

        <div class="col-md-4 text-center">
          <%= link_to csv_data_exports_path(format: :csv, type: "Transfer"), class: "btn btn-primary btn-md" do %>
            <i class="fa fa-download" aria-hidden="true"></i> Transfers
          <% end %>
        </div>
      </div>
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section><!-- /.content -->
