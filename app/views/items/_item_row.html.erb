<tr data-item-id="<%= item_row.id %>">
  <td><%= item_row.item_category && link_to(item_row.item_category&.name, item_category_path(item_row.item_category), class: 'text-blue-500') %></td>
  <td><%= item_row.name %></td>
  <td><%= item_row.distribution_quantity %></td>
  <td class="numeric"><%= dollar_value(item_row.value_in_cents) %></td>
  <td class="text-center">
    <div class="btn-group" role="group">
      <%= view_button_to item_path(item_row), { type: "outline-primary" } %>

      <div class="btn-group" role="group">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa fa-ellipsis-h"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to "Edit", edit_item_path(item_row), class: "dropdown-item" %>
          <% if item_row.kit.blank? %>
            <%= link_to "Delete", item_path(item_row), { class: "dropdown-item", confirm: confirm_delete_msg(item_row.name) } if item_row.active %>
          <% end %>
          <%= link_to "Restore", restore_item_path(item_row), { class: "dropdown-item", confirm: confirm_restore_msg(item_row.name) } unless item_row.active %>
        </div>
      </div>
    </div>
  </td>
</tr>
