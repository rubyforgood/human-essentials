<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Purchases - #{@purchase.purchased_from} - Edit" %>
  <h1>
    Editing Purchase
    <small>from <%= @purchase.purchased_from %></small>
  </h1>
  <ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><%= link_to "Purchases", (purchases_path) %></li>
    <li class="active"> Editing <%= @purchase.purchased_from %> on <%= @purchase.created_at.strftime("%B %-d %Y") %></li>
  </ol>
</section>

<section class="content">
  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">

      <%= render partial: "purchase_form", object: @purchase %>
    </div>
  </div>
</section>