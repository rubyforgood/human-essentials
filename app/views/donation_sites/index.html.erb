<section class="content-header">
  <% content_for :title, "Donation Sites - Agencies - #{current_organization.name}" %>
  <h1>
    Donation Sites
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><a href="#">Donation Sites</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <div class="box">
    <div class="box-header with-border bg-gray">
      <section id="filters">
        <!-- TBA; replicate HTML from other #index views -->
        <div class="btn-group pull-right">
          <%= link_to new_donation_site_path(organization_id: current_organization), class: "btn btn-success" do %>
            <i class="fa fa-plus"></i> New Donation Site
          <% end %>
          <% if @donation_sites.length > 0 %>
            <%= link_to csv_path(format: :csv, type: "DonationSite"), class: "btn btn-secondary" do %>
              <i class="fa fa-download" aria-hidden="true"></i> Export Donation Sites
            <% end %>
          <% end %>
        </div>
      </section><!-- /#filters -->
    </div><!-- /.box-header -->
    <div class="box-body">
      <% if @donation_sites.empty? %>
        <%= render partial: "import_donation_site_modal" %>
      <% end %>
      <div class="row">
        <div class="col-xs-12">
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover index">
              <thead>
                <tr>
                  <th>Donation Site</th>
                  <th>Address</th>
                  <th>&nbsp;</th>
                </tr>
                <%= render partial: 'shared/table_row_form',
                           object:  @donation_site,
                           locals: {columns: [{name: :text_field}, {address: :text_field}]}
                %>
              </thead>
              <tbody>
                <%= render partial: "donation_site_row", collection: @donation_sites %>
              </tbody>
            </table>
          </div><!-- /.box-body.table-responsive -->
        </div><!-- /.col-xs-12 -->
      </div><!-- /.row -->
    </div><!-- /.box-body -->
  </div><!-- /.box -->
</section><!-- /.content -->
