<% content_for :title, "#{current_organization.name} - Users" %>

<div class="header-action">
  <%= link_to "Add a user", new_user_path, class: "button float-right" %>
</div>

<h1><%= current_organization.name %> Users</h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user != current_user %>
            <%= link_to "Edit", edit_user_path(user) %>
            <%= link_to "Delete", user_path(user), method: :delete, confirm: "Are you sure you want to permanently remove this user?" %>
          <% else %>
            <%= link_to "Edit", edit_user_registration_path(organization_id: nil) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
