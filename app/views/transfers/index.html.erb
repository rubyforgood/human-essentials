<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Inventory - Transfers" %>
  <h1>
    Adjustments
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><a href="#">Transfers</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <div class="row">
        <div class="col-xs-3">
      <h3 class="box-title">Transfers</h3>
        </div>
        <div class="col-xs-9">
        <%= form_tag(transfers_path, method: :get) do |f| %>
          <%= label_tag "From this Storage Location" %>
          <%= collection_select(:filters, :from_location, @from_storage_locations || {}, :id, :name, { include_blank: true, selected: (@selected_from) }) %>
          <%= label_tag "To this Storage Location" %>
          <%= collection_select(:filters, :to_location, @to_storage_locations || {}, :id, :name, { include_blank: true, selected: (@selected_to) }) %>

          <%= submit_tag "Filter", class: "btn btn-primary btn-xs" %>
          <%= link_to "Clear Filters", transfers_path, class: "btn btn-info btn-xs secondary"  %>
        <% end %>
        </div>
      </div>
      <%= link_to "New Transfer", new_transfer_path(organization_id: current_organization), class: "btn btn-success btn-xs pull-right" %>
    </div>
<div class="box-body">
  <div class="row">
    <div class="col-xs-12">
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
          <tr>
            <th>From</th>
            <th>To</th>
            <th>Comment</th>
            <th>Total Moved</th>
            <th>Details</th>
          </tr>
            <%= render partial: "transfer_row", collection: @transfers %>
          </table>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>
</div>
</div>
</section>









