<% css_class ||= "" %>
<%= text_field_tag "filters[date_range]",
@selected_date_range_label,
placeholder: "January 1, 2011 - December 31, 2011",
class: "#{css_class}",
autocomplete: "on",
data: {
  initial_start_date: @selected_date_interval.first.strftime("%B %d, %Y"),
  initial_end_date: @selected_date_interval.last.strftime("%B %d, %Y"),
} %>
<%= hidden_field_tag "filters[date_range_label]", @selected_date_range_label %>
