<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-primary">

          <div class="card-header">
            <h2 class="card-title">Organization Info</h2>
          </div>

          <div class="card-body md:flex sm:block">
            <h2>Basic Information</h2>
            <div>
              <h5>Name</h5>
              <p><%= current_organization&.name %></p>
            </div>
            <div>
              <h5>Short Name</h5>
              <p>
                <%= @organization.short_name || "Not Provided" %>
              </p>
            </div>
            <div>
              <h5>NDBN Membership ID</h5>
              <p>
                <%= @organization.ndbn_member&.full_name || "Not Provided" %>
              </p>
            </div>
            <div>
            <h5>URL</h5>
              <p>
                <% if @organization.url.blank? %>
                  Not Provided
                <% else %>
                  <a href="<%= @organization.url %>">
                    <%= fa_icon "external-link" %>
                    <%= @organization.url %></a>
                <% end %>
              </p>
            </div>
            <div>
              <h5>Email</h5>
              <p>
                <%= fa_icon "envelope" %>
                <% if @organization.email.blank? %>
                  Not Provided
                <% else %>
                  <%= link_to @organization.email, "mailto:#{@organization.email}",
                              aria: { label: "Email organization - opens in new tab" } %>
                <% end %>
              </p>
            </div>
            <div>
              <h5>Address</h5>
              <address class="mb-0"><%= fa_icon "map-marker" %>
                <% if @organization.address.blank? %>
                    Not provided
                <% else %>
                    <%= @organization.address %>
                </address>
              <% end %>
              </p>
            </div>
            <div>
              <h5>Logo</h5>
              <% if @organization.logo.attached? %>
                <div>
                  <p>
                    <%= image_tag @organization.logo, class: "main_logo" %>
                  </p>
                  <p>
                    <a href="#showTheLogo" class="btn btn-xs btn-info" data-bs-toggle="modal">
                      View Original
                    </a>
                  </p>
                  <div id="showTheLogo" class="modal fade">
                    <div class="modal-dialog">
                      <%= image_tag @organization.logo, class: "thumbnail" %>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              <% else %>
                <p>Not Provided</p>
              <% end %>
            </div>
            <hr>

            <h2>Storage</h2>
            <div>
              <h5>Default Intake Storage Location (for donations and purchases)</h5>
              <p>
                <%= fa_icon "building" %>
                <%= @intake_storage_location&.name || "Not defined" %>
              </p>
            </div>
            <div>
              <h5>Default Storage Location</h5>
              <p>
                <%= fa_icon "building-o" %>
                <%= @default_storage_location&.name || "Not defined" %>
              </p>
            </div>
            <hr>

            <h2>Partner Approval Process</h2>
            <div>
              <h5>Use One step Partner invite and approve process?</h5>
              <p>
                <%= humanize_boolean(@organization.one_step_partner_invite) %>
              </p>
            </div>
            <div>
              <h5>Custom Partner Invitation message</h5>
              <p>
                <%= @organization.invitation_text.blank? ? "Not defined" : @organization.invitation_text %>
              </p>
            </div>
            <div>
              <h5>Partner Profile Sections</h5>
                <% if @organization.partner_form_fields.blank? %>
                  <p>Not Provided</p>
                <% else %>
                  <ul>
                    <% for partner_form_field in @organization.partner_form_fields %>
                      <li>
                        <%= display_partner_fields_value(partner_form_field) %>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
              </p>
            </div>
            <hr>

            <h2>What kind of requests can approved partners make?</h2>
            <div>
              <h5>Enable partners to make child-based requests?</h5>
              <p>
                <%= fa_icon "child" %>
                <%= humanize_boolean(@organization.enable_child_based_requests) %>
              </p>
            </div>
            <div>
              <h5>Enable partners to make requests by indicating number of individuals needing each item?</h5>
              <p>
                <%= fa_icon "female" %>
                <%= humanize_boolean(@organization.enable_individual_requests) %>
              </p>
            </div>
            <div>
              <h5>Enable partners to make quantity-based requests?</h5>
              <p>
                <%= fa_icon "group" %>
                <%= humanize_boolean(@organization.enable_quantity_based_requests) %>
              </p>
            </div>
            <% if Flipper.enabled?(:enable_packs) %>
              <div>
                <h5>Custom request units used (please use singular form -- e.g. pack, not packs)</h5>
                <p>
                  <% if @organization.request_units.length > 0 %>
                    <% @organization.request_units.map do |unit| %>
                      <%= fa_icon "angle-right" %>
                      <span>
                          <%= unit.name.titlecase %>
                      </span> <br>
                    <% end %>
                  <% else %>
                    <%= fa_icon "angle-right" %>
                    <span> None </span>
                  <% end %>
                </p>
              </div>
            <% end %>
            <div class="mb-4">
              <h5>Receive email when partner makes a request?</h5>
              <p>
                <%= humanize_boolean(@organization.receive_email_on_requests) %>
              </p>
            </div>
            <hr>

            <h2>Other Emails</h2>
            <div>
              <h5>Default Reminder day (Day of month an email reminder to submit requests is sent to partners)</h5>
              <p>
                <%= fa_icon "calendar" %>
                <%= @organization.reminder_day.blank? ? 'Not defined' : "The #{@organization.reminder_day.ordinalize} of each month" %>
              </p>
            </div>
            <div>
              <h5>Default Deadline day (Final day of month to submit requests)</h5>
              <p>
                <%= fa_icon "calendar" %>
                <%= @organization.deadline_day.blank? ? 'Not defined' : "The #{@organization.deadline_day.ordinalize} of each month" %>
              </p>
            </div>
            <div>
              <h5>Default Email Content</h5>
              <p>
                <%= @organization.default_email_text.presence || 'Not defined' %>
              </p>
            </div>
            <hr>

            <h2>Printing</h2>
            <div>
              <h5>Show year-to-date values on distribution printout</h5>
              <p>
                <%= humanize_boolean(@organization.ytd_on_distribution_printout) %>
              </p>
            </div>
            <div>
              <h5>Include signature lines on distribution printout</h5>
              <p>
                <%= humanize_boolean(@organization.signature_for_distribution_pdf) %>
              </p>
            </div>
            <div>
              <h5>Hide value columns on distribution and donation printout</h5>
              <p>
                <%= humanize_boolean(@organization.hide_value_columns_on_receipt) %>
              </p>
            </div>
            <div>
              <h5>Hide package column on distribution printout</h5>
              <p>
                <%= humanize_boolean(@organization.hide_package_column_on_receipt) %>
              </p>
            </div>
            <hr>

            <h2>For Annual Survey</h2>
            <div>
              <h5>Does your bank repackage essentials?</h5>
              <p>
                <%= fa_icon "inbox" %>
                <%= humanize_boolean(@organization.repackage_essentials) %>
              </p>
            </div>
            <div>
              <h5>Does your bank distribute monthly?</h5>
              <p>
                <%= fa_icon "paper-plane" %>
                <%= humanize_boolean(@organization.distribute_monthly) %>
              </p>
            </div>
          </div>

          <% if can_administrate? %>
            <div class="card-footer">
              <%= edit_button_to(edit_organization_path, {size: "md"}) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
