
<section class="content-header">
  <% content_for :title, "Organizations - #{@organization.name} - Edit" %>
<h1>
  Editing
  <small><%= current_organization.name %></small>
</h1>
<ol class="breadcrumb">
<li><%= link_to(dashboard_path) do %>
    <i class="fa fa-dashboard"></i> Home
  <% end %>
  </li>
    <li><a href="#">Editing <%= current_organization.name %></a></li>
</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Update record for <%= current_organization.name %></h3>
  </div>
  <div class="box-body">
<%= simple_form_for current_organization, url: organization_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, wrapper: :vertical_input_group %>
    <%= f.input :short_name, required: true, autofocus: true, wrapper: :vertical_input_group %>
    <%= f.input :url, as: :url, placeholder: "http://www.example.com", wrapper: :vertical_input_group %>
    <%= f.input :email, wrapper: :vertical_input_group %>
    <%= f.input :address, wrapper: :vertical_input_group %>
    <%= f.input :intake_location, :collection => current_organization.storage_locations, :label_method => :name,:value_method => :id,:label => "Default Intake Location" ,:include_blank => true, wrapper: :vertical_input_group %>
    <%= f.input :logo, wrapper: :vertical_input_group %>
    <p class="help-block">Logo should be a 4:1 ratio of width / height (default image is 763 x 188 pixels)</p>

  <% if current_organization.logo.present? %>
      <a href="#showTheLogo" class="btn btn-xs btn-info" data-toggle="modal">Preview Current Logo</a>

      <!-- Button HTML (to Trigger Modal) -->
      <!-- Modal HTML -->
      <div id="showTheLogo" class="modal fade">
          <div class="modal-dialog">

                    <%= image_tag current_organization.logo.url %>
          </div>
      </div>

    <% end %>
      <%= f.button :submit, "Update", class: "btn btn-primary pull-right" %>
  </div>

  </div>

<% end %>
</div>
</div>
<!-- /.box -->

</section>
