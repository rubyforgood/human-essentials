<section class="content-header">
  <% content_for :title, "Users - Edit" %>
<h1>
  Editing
  <small>your profile</small>
</h1>
<ol class="breadcrumb">
<li><%= link_to(dashboard_path) do %>
    <i class="fa fa-dashboard"></i> Home
  <% end %>
  </li>
    <li><a href="#">Editing <%= current_user.name %></a></li>
</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= current_user.name %></h3>
  </div>
  <div class="box-body">
<%= simple_form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

      <%= f.input :name, label: "Name:", required: true, autofocus: true, wrapper: :vertical_input_group do %>
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.input_field :name, class: "form-control" %>
        <% end %>    
      <%= f.input :email, label: "Password:", wrapper: :vertical_input_group do %>
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
          <%= f.input_field :password, class: "form-control" %>
        <% end %>
      <%= f.input :current_password, label: "Current Password:", wrapper: :vertical_input_group do %>
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= f.input_field :password, class: "form-control" %>
        <% end %>        
    <p class="help-block" id="password-confirmation-help">we need your current password to confirm your changes</p>

      <%= f.input :password, autocomplete: "off", required: false %>
      <p class="help-block" id="password-help">leave it blank if you don't want to change it</p>
      <%= f.input :password_confirmation, required: false %>
  <br>
  <div class="form-actions medium-offset-3 medium-6">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
</div>
</div>
<!-- /.box -->

</section>
 
















