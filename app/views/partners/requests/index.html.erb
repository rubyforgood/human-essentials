<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <% content_for :title, "Essentials Requests - #{current_user.display_name}" %>
        <h1><i class="fa fa-edit"></i>&nbsp;&nbsp;Essentials Requests
          <small>for <%= current_user.display_name %></small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to(partner_user_root_path) do %>
              <i class="fa fa-dashboard"></i> Home
            <% end %>
          </li>
          <li class="breadcrumb-item">
            <a><%= "#{current_partner.name}" %></a></li>
          <li class="breadcrumb-item"><a href="#">Essentials Requests</a></li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- Default box -->
        <%= render 'request_options_card' if @partner.approved? %>
      </div>
    </div>
  </div>
</section>

<section class="container mx-auto my-8">
  <%= render partial: "/partners/requests/history" %>
</section>
