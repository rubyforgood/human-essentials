<header class="container mx-auto mb-5">
  <%= render 'broadcast_announcement' if @broadcast_announcements.any? %>
  <h1 class="d-block font-weight-bold mb-1">Dashboard - <%= @partner.name %></h1>
  <h3><button class="btn btn-warning mx-auto p-2 font-weight-bold round">
  <%= @partner.display_status %> Partner</button></h3>
</header>

<main>
  <%= render partial: '/partners/requests/request_options_card' if @partner.approved? %>

  <section class="container mx-auto my-5">
    <%= render partial: "requests_in_progress" %>
  </section>

  <section class="container mx-auto my-5">
    <%= render partial: "partners/distributions/distribution_section",
               locals: {
                 distributions: @upcoming_distributions,
                 title: "Upcoming Distributions", date_header: "Pick Up Date",
                 item_header: "Items To Receive"
               } %>
  </section>

  <section class="container mx-auto my-8">
    <%= render partial: "partners/distributions/distribution_section",
     locals: {
        distributions: @distributions,
        title: "Prior Distributions", date_header: "Date Received",
        item_header: "Items Received"
      } %>
    </section>

  <section class="container mx-auto my-5">
    <%= render partial: "family_details" %>
  </section>
</main>
