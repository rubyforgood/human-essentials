<div class="card mb-4">
  <h5 class="card-header bg-primary text-white">Agency Information</h5>
  <div class="card-body">
    <dl>
      <dt>Name</dt>
      <dd><%= profile.partner.name %></dd>

      <dt>Agency Type</dt>
      <dd><%= profile.agency_type %></dd>

      <% if profile.agency_type == "Other" %>
        <dt>Other Agency Type</dt>
        <dd><%= profile.other_agency_type %></dd>
      <% end %>

      <dt>Status</dt>
      <dd><%= profile.partner.display_status %></dd>

      <dt>501(c)(3) IRS Determination Letter</dt>
      <% if profile.proof_of_partner_status.attached? %>
        <dd>Attached
          file: <%= link_to profile.proof_of_partner_status.blob['filename'], rails_blob_path(profile.proof_of_partner_status), class: "font-weight-bold" %></dd>
      <% else %>
        <dd>Documentation not on file</dd>
      <% end %>

      <dt>Agency Mission</dt>
      <dd><%= profile.agency_mission %></dd>

      <address>
        <strong>Address</strong> <br>
        <%= profile.address1 %> <br>
        <% unless profile.address2.blank? %> <br>
          <%= profile.address2 %> <br>
        <% end %>
        <%= profile.city %> <%= profile.state %> <br>
        <%= profile.zip_code %>
      </address>
    </dl>
  </div>
</div>
