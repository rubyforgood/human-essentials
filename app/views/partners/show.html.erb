<section class="content-header">
<% content_for :title, "#{current_organization.name} - Agencies - Partners - #{@partner.name}" %>
<h1>
  Partner info
  <small>for <%= @partner.name %></small>
</h1>
<ol class="breadcrumb">
  <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
  <li><a href="#">Partners</a></li>
  <li class="active"><%= @partner.name %></li>
</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @partner.name %></h3>
  </div>
  <div class="box-body">

  <p><%= link_to @partner.email, "mailto:#{@partner.email}" %></p>
  
  <h3>Past Distributions</h3>
  
  <div class="row">
  <div class="col-xs-12">
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <tr>
        <th>Date</th>
        <th>Source Inventory</th>
        <th>Total items</th>
        <th>&nbsp
        </tr>

        <% @partner.distributions.each do |dist| %>  
            <tr>
            <td><%= dist.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= dist.storage_location.name %></td>
            <td><%= dist.line_items.total %></td>
            <td class="pull-right">
              <%= link_to "View", distribution_path(dist), class: "btn btn-info btn-xs" %>
              <%= link_to "Print", print_distribution_path(dist, format: :pdf), class: "btn btn-info btn-xs" %>
            </td>
          </tr>
          <% end %>        </table>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
  </div>
  </div>
</div>



