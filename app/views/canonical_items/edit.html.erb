<section class="content-header">
  <% content_for :title, "Inventory - Items - #{@canonical_item.name} - Edit" %>
<h1>
  Editing Canonical Item
</h1>
<ol class="breadcrumb">
<li><%= link_to(dashboard_path) do %>
    <i class="fa fa-dashboard"></i> Home
  <% end %>
  </li>
  <li><%= link_to "All Canonical Items", (canonical_items_path) %></li>  
  <li class="active">Editing <%= @canonical_item.name %></li>
</ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Update <%= @canonical_item.name %></h3>
  </div>
  <div class="box-body">
  
    <%= render partial: "form", object: @canonical_item, locals: { submit_text: "Update Canonical Item" } %>
  </div>
</div>
<!-- /.box -->

</section>


