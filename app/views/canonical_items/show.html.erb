<section class="content-header">
  <% content_for :title, "Canonical Items - #{@canonical_item.name}" %>
  <h1>
    Canonical Item details
    <small>for <%= @canonical_item.name %></small>
  </h1>
  <ol class="breadcrumb">
  <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><%= link_to "Canonical Items", (canonical_items_path) %></li>  
    <li class="active"> <%= @canonical_item.name %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

<!-- Default box -->
<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @canonical_item.name %></h3>
  </div>
  <div class="box-body">

    <p>Category: <%= @canonical_item.category %></p>

    <p>Size: <%= @canonical_item.size || "no size provided" %>

    <h4>Items created from this Canonical Item</h4>
    <div class="row">
      <div class="col-xs-12">      
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>Name</th>
              <th>Organization</th>
            </tr>

            <% @items.each do |item| %>
            <tr id="item-row-<%= item.to_param %>">
              <td><%= item.name %></td>
              <td><%= link_to item.organization.name, organization_path(item.organization) %></td>
            </tr>
            <% end %>        
          </table>
        </div> <!-- /.box-body -->
      </div> <!-- /.col-xs-12 -->
    </div> <!-- /.row -->
  </div> <!-- /.box-body -->
</div> <!-- /.box -->
</section>





