<section class="content-header">
  <% content_for :title, "Manufacturers - #{@manufacturer.name} - Agencies -
  #{current_organization.name}" %>
  <h1>
    Manufacturer Information
    <small>for <%= @manufacturer.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home <% end %>
    </li>
    <li><%= link_to "Manufacturers", (manufacturers_path) %></li>
    <li class="active"><%= @manufacturer.name %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title"><%= @manufacturer.name %></h3>
    </div>
    <div class="box-body">
      <p>Business name: <%= @manufacturer.name %></p>
      <h4>Past Donations from this Manufacturer</h4>
      <div class="row">
        <div class="col-xs-12">
          <!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover striped">
              <tr>
                <th>Date</th>
                <th>Volume</th>
                <th>Details</th>
              </tr>

              <% @manufacturer.donations.each do |donation| %>
              <tr>
                <td><%= donation.created_at.strftime("%m/%d/%Y") %></td>
                <td><%= donation.line_items.total %></td>
                <td>
                  <%= view_button_to donation, { text: "View donation details" }
                  %>
                </td>
              </tr>
              <% end %>
            </table>

            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>
    </div>
  </div>
</section>
