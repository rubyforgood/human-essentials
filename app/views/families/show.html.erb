<div class="app-title">
  <div>
    <h1><i class="fa fa-users"></i> Show Family</h1>
  </div>
  <ul class="app-breadcrumb breadcrumb">
    <li class="breadcrumb-item"><i class="fa fa-users"></i></li>
    <li class="breadcrumb-item"><a href="#">Show Family</a></li>
  </ul>
</div>
<div class="row">
  <div class="col-md-12">
    <% if notice %>
      <div class="alert alert-dismissible alert-success">
        <button class="close" type="button" data-dismiss="alert">Ã—</button>
        <p><%= notice %><a class="alert-link" href="#"></p>
        </a></p>
      </div>
    <% end %>

    <div class="container">
      <div class="row">
        <div class="col-6">
         <div class="card mb-12">
            <h5 class="card-header bg-primary text-white">Family Information</h5>
            <div class="card-body">
              <dl>
                <dt>Guardian first name:</dt>
                <dd><%= @family.guardian_first_name %></dd>

                <dt>Guardian last name:</dt>
                <dd><%= @family.guardian_last_name %></dd>

                <dt>Guardian zip code:</dt>
                <dd><%= @family.guardian_zip_code %></dd>

                <dt>Guardian country:</dt>
                <dd><%= @family.guardian_country %></dd>

                <dt>Guardian phone:</dt>
                <dd><%= @family.guardian_phone %></dd>

                <dt>Agency guardian:</dt>
                <dd><%= @family.agency_guardian_id %></dd>

                <dt>Home adult count:</dt>
                <dd><%= @family.home_adult_count %></dd>

                <dt>Home child count:</dt>
                <dd><%= @family.home_child_count %></dd>

                <dt>Home young child count:</dt>
                <dd><%= @family.home_young_child_count %></dd>

                <dt>Sources of income:</dt>
                <dd><%= @family.sources_of_income %></dd>

                <dt>Guardian employed:</dt>
                <dd><%= @family.guardian_employed %></dd>

                <dt>Guardian employment type:</dt>
                <dd><%= @family.guardian_employment_type %></dd>

                <dt>Guardian monthly pay:</dt>
                <dd><%= @family.guardian_monthly_pay %></dd>

                <dt>Guardian health insurance:</dt>
                <dd><%= @family.guardian_health_insurance %></dd>

                <dt>Comments:</dt>
                <dd><%= @family.comments %></dd>
              </dl>

              <%= link_to 'Edit', edit_family_path(@family) %> |
              <%= link_to 'Back', families_path %> |
              <%= link_to 'New Child', new_child_path(family_id: @family.id) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
