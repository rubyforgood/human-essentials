<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">Guardian last name</th>
    <th scope="col">Guardian first name</th>
    <th scope="col">Agency guardian</th>
    <th scope="col">Comments</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @families.each do |family| %>
    <tr>
      <td><%= family.guardian_last_name %></td>
      <td><%= family.guardian_first_name %></td>
      <td><%= family.agency_guardian_id %></td>
      <td><%= family.comments %></td>
      <td><%= link_to 'View Family', family, class: "btn btn-sm btn-info pull-right" %></td>
      <td><%= link_to 'Edit Family Details', edit_family_path(family), class: "btn btn-sm btn-success pull-right" %></td>
  <% end %>
  </tbody>
</table>
