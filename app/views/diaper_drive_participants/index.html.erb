<section class="content-header">
  <% content_for :title, "#{current_organization.name} - Agencies - Diaper Drive Participants" %>
  <h1>
    Diaper Drive Participants
    <small>for <%= current_organization.name %></small>
  </h1>
  <ol class="breadcrumb">
    <li><%= link_to(dashboard_path) do %>
      <i class="fa fa-dashboard"></i> Home
    <% end %>
    </li>
    <li><a href="#">Dropoff Locations</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">All Dropoff Locations</h3>  <%= link_to "New Diaper Drive Participant", new_diaper_drive_participant_path(organization_id: current_organization), class: "btn btn-success btn-xs pull-right" %>

    </div>
    <div class="box-body">

<% if @diaper_drive_participants.empty? %>

<div class="import-partners">
    <!-- Button HTML (to Trigger Modal) -->
    <a href="#importDropoffLocationModal" class="btn btn-xs btn-primary" data-toggle="modal">Import Dropoff Locations</a>
    
    <!-- Modal HTML -->
    <div id="importDropoffLocationModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h2 class="modal-title">Import Dropoff Locations Instructions:</h4>
                </div>
                <div class="modal-body">
                  <ol>
                    <li><%= link_to "Download example csv", "/diaper_drive_participants.csv", :format => :csv, :class => "btn btn-xs btn-info" %>.</li>
                    <li>Open the csv file with excel or your favourite spreadsheet program.</li>
                    <li>Delete the sample data and enter the diaper drive participant names, emails and phone numbers in the appropriate columns.</li>
                    <li>Save the file as a csv file.</li>
                    <li>Click the choose file button and navigate to the saved file and select it.</li>
                    <li>Then click the Import CSV button to import your storage locations.</li>
                  </ol>
                <p class="text-warning"><small>Note: You're only able to run the import one time to prevent accidental imports or writing over existing locations!</small></p>
                </div>
                <div class="modal-footer">
                  <%= form_tag import_csv_diaper_drive_participants_path, multipart: true do %>
                    <%= file_field_tag :file, :accept => 'text/csv' %>
                    <%= submit_tag "Import CSV", :class => "btn btn-sm btn-primary" %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<% end %>                                                              

<div class="row">
  <div class="col-xs-12">
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Volume</th>
          <th>&nbsp;</th>
        </tr>
          <%= render partial: "diaper_drive_participant_row", collection: @diaper_drive_participants %>
        </table>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
</section>









