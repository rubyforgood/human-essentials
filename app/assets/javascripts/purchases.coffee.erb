$ ->
  vendor_id = "#purchase_vendor_id"
  create_new_vendor_text = "---Not Listed---"
  $(vendor_id).
  append('<option value="">' + create_new_vendor_text + '</option>')

  $(document).on "change", vendor_id, (evt) ->
    selection = $(vendor_id + " option").
    filter(':selected').text()
    if (selection is create_new_vendor_text)
      $("#new_vendor").click()
